%ul
  - @files.each do |file|
    %li
      = file.name
      %a(href="/files/#{file.name}")
        (SHOW)
      %a(href="/files/#{file.name}/edit")
        (EDIT)
      %form(method="post" action="/files/#{file.name}/delete" class="inline")
        %button(type="submit" name="delete")
          DELETE

%a(href="/files/new")
  + NEW
